{
  "name": "projet-todo-api",
  "version": "1.0.0",
  "description": "A small API REST for managing tasks (To-Do List) with CI/CD and documentation",
  "main": "dist/server.js",
  "scripts": {
    "start": "tsc && node dist/server.js",
    "dev": "ts-node-dev src/server.ts",
    "test": "jest",
    "test:e2e": "playwright test",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "docs": "swagger-jsdoc -d docs/swagger.yaml -o docs/swagger.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "jest": "^27.5.1",
    "playwright": "^1.15.2",
    "supertest": "^7.0.0",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
